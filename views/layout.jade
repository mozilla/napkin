!!! 5
html
  head
    title Napkin - The Rapid Web Prototyping Tool
    meta(content='width=device-width, height=device-height, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0', name='viewport')

    meta(content='yes', name='apple-mobile-web-app-capable')
    meta(content='chrome=1', http-equiv='X-UA-Compatible')

    // TODO: add favicon later - link(rel='shortcut icon', href='/images/favicon.png')
    link(rel='stylesheet', href='/stylesheets/bootstrap-stripped.min.css')
    link(rel='stylesheet', href='/stylesheets/main.css')
    link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Open+Sans:300,400')

    block styles

  body(id='#{pageId}')
    #main.clearfix
      #sidebar.clearfix
        header
          h1
            a(href='/') Napkin

          if typeof(sharing) === 'undefined' || !sharing
            if session.email
              a(href='/log-out', tabindex='-1')
                img(src='/images/browser-id-sign-out.png', alt='Browser ID Sign Out')
            else
              form#login-form(method='post', action='/log-in')
                a(href='#login')
                  img(src='/images/browser-id-sign-in.png', alt='Browser ID Sign In')
                input(type='hidden', name='bid_assertion', value='1')

        block sidebar
      #content
        block content

    block scripts
