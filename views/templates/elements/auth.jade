script#auth-element-template(type='text/ejs')
  if sharing
    if session.auth && session.auth[projectId]
      a.persona-button.share-element(href='/share/#{userId}/project/#{projectId}/screen/#{screenId}/log-out')
        span Sign out
    else
      != partial('helpers/share-login-form')
  else
    .live-element.auth
      a.persona-button(href='#log-in')
        span Sign in
