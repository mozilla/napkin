script#heading-popover-template(type='text/template')
  form
    .field
      label(for='text') Text:
      input#text(name='text', type='text', value!='<%- text %>')

    .field
      label(for='level') Level:
      select#level(name='level')
        <% for(var i = 1; i <= 6; i++) { %>
        <% if(i === level) { %>
        option(value!='<%- i %>', selected='true') <%- i %>
        <% } else { %>
        option(value!='<%- i %>') <%- i %>
        <% } %>
        <% } %>

    != partial('templates/popovers/footer')
