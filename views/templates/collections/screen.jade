script#screen-row-template(type='text/ejs')
  .row.screen-row

script#screen-template(type='text/ejs')
  .span3.screen(class!="<%= attr('editing') %>")
    h4 <%= screen.attr('title') %>
      a(href='#edit-screen')
        i.icon-pencil
        i.icon-trash

    input.edit(type='text', value!="<%= screen.attr('title') %>")
    i.icon-remove

    a(href!="/prototype/project/<%= attr('projectId') %>/screen/<%= screen.attr('id') %>")
      <% if (screen.attr('screenshotCreated')) { %>
      <% var imageSrc = attr('projectId') + '-' + screen.attr('id') + '.png'; %>
      img(src!="/screenshots/#{session.id}-<%= imageSrc %>", alt='Screen screenshot')
      <% } else { %>
      img(src='/images/220x220.gif', alt='Screen placeholder')
      <% } %>
